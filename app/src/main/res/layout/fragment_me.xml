<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:orientation="horizontal"
        android:weightSum="4">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >
            <ImageView
                android:id="@+id/avatar_me_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_margin="15dp"
                android:background="#9a9a9a"
                />
            <TextView
                android:id="@+id/name_me_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_toRightOf="@id/avatar_me_img"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#F000"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/user_id_me_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User ID: 1234567"
                android:layout_below="@id/name_me_tv"
                android:layout_toRightOf="@id/avatar_me_img"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_apps_black_24dp"
                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:background="#cccccc"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#ffffff"
        android:layout_marginTop="20dp">

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_wb_sunny_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#F000"
            android:layout_weight="9.5"
            />
        <ImageView
            android:id="@+id/account_img"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#ffffff"
        android:layout_marginTop="20dp">

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_settings_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#F000"
            android:layout_weight="9.5"
            />
        <ImageView
            android:id="@+id/setting_img"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#ffffff"
        android:layout_marginTop="20dp">

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_receipt_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/request_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#F000"
            android:layout_weight="9.5"
            />
        <ImageView
            android:id="@+id/request_img"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    </LinearLayout>


</LinearLayout>